/* pages/login/login.wxss */
.container{
  padding: 28rpx 80rpx 0 80rpx;
  font-size: 28rpx;
  position: relative;
  min-height: 100vh;
}
.login-bg{
position: absolute;
bottom: 0;
left: 0;
width: 100%;
height: 466rpx;
}
.logo-img{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #000000;
  font-size: 38rpx;
  margin-bottom: 96rpx;
  font-weight:600;
}
.code{
  z-index: 99;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  position: absolute;
  right: 14rpx ;
  color: #ffff;
  top: 0;
  bottom: 0;
  margin: auto;
  background:rgba(0,102,173,1);
  border-radius:15px;
  border:1px solid rgba(0,102,173,1);
  font-size: 12px;
}
.logo-img image{
width: 140rpx;
height: 140rpx;
margin-bottom: 18rpx;
}
.input-box input{
  height: 100%;
  font-size: 28rpx;
  width: 100%;
 
}

.buttonss{
  display: flex;
  align-items: center;
  height: 88rpx;
  justify-content: center;
border-radius:22px;
color: #ffff !important;
font-size: 32rpx;
width: 472rpx;
margin: 74rpx auto 0;
}

.buttonss1{

  background:#358DEC;
}
.buttonss2{
  border:1px solid rgba(204,204,204,1);
  background-color: #fff;
  color: #333333 !important;
  position: relative;
  box-sizing: border-box;


}
.buttonss2  button{

  background-color: transparent;
  font-size: 32rpx;
  border: 0;
  padding: 0;

  margin: 0;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  text-indent: 3em;
 
}
.buttonss2 button::after{
  width: auto;
  height: auto;
  border: none;
}
.buttonss2 .image {
  height: 50rpx;
  width: 60rpx;
  margin-right: 20rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 18%;
  margin: auto 0;

}
.phone{
  height: 100%;
  width: 60%
}
.input-son{
  position: relative;
  height: 84rpx;
  padding-left: 40rpx;
  box-sizing: padding-box;
  background: #FFFFFF;
  box-shadow: 0px 1px 2px 0px rgba(0, 0, 0, 0.13);
  border-radius: 8px;
  border: 1px solid #CCCCCC;

}
.input-son:last-child{
  margin-top: 60rpx;
  /* margin-bottom: 136rpx; */
}
.forget{
  color: #38A4EF;
  font-size: 26rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 36rpx;
  margin: auto 0;
  line-height:84rpx;
  z-index: 99;
}