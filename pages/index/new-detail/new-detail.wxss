.title{
  text-align: left;
    padding: 20rpx 34rpx 0 34rpx;
    margin-bottom:24rpx;
    font-size: 36rpx;
    font-weight: 600;
}
.newText{
  text-align: center;
  height: 60rpx;
  line-height: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.radius{
  margin-left: 5px;
  border-radius: 50%;
  width: 34rpx;
  height: 34rpx;
    border: 2px solid #333333;
  border-left-color: transparent;
  animation: rotate 500ms linear infinite;
}
@keyframes rotate {
  0%{
    transform: rotate(0deg)
  }
  100%{
      transform: rotate(360deg)
  }
}
.nav {
    border-bottom: 10rpx solid #F2F2F2;
}


#myVideo {
    width: 100%;
    height: 438rpx;
}

.nav-bot {
    padding: 28rpx 24rpx 20rpx;
}

.nav-title {
    display: block;
    font-size: 36rpx;
    font-weight: 500;
    color: rgba(0, 0, 0, 1);
    line-height: 50rpx;
    margin-bottom: 18rpx;
}

.nav-wrap {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.nav-look {
    display: flex;
    align-items: center;
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    line-height: 40rpx;
}

.img-look {
    width: 42rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.nav-time {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    line-height: 40rpx;
}


/* 回复框 */
.main {
    width: 100%;
    height: 126rpx;
    background: rgba(255, 255, 255, 1);
    position: fixed;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-bottom: 38rpx;
    box-sizing: border-box;

}

.input-box {
    width:536rpx;
    height:88rpx;
    background:linear-gradient(90deg,rgba(56,164,239,1) 0%,rgba(0,102,173,1) 100%);
    box-shadow:0px 2px 4px 0px rgba(248,154,182,0.44);
    border-radius:25px;
    color: #fff;
    font-size: 36rpx;
    line-height:88rpx;
    text-align: center;

}

