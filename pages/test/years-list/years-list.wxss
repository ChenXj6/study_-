/* pages/course/course.wxss */
.container{
  padding-top: 18rpx;
  text-align: center;
  font-size: 36rpx;
}

.sub-content-box{
  padding: 0 32rpx;

}
.sub-content-item{
  height: 86rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #F2F2F2;
align-items: center;
}
.sub-item-right{
  width: 20rpx;
  height: 28rpx;

}
/* 弹出层 */
.prop-box{
  text-align: center;
  position: absolute;
  width: 100%;
  height: 100vh;
  top: 0;
  left: 0;
  background:rgba(0,0,0,0.5);
}
.prop-box-sub{
  width: 484rpx;
  height: 584rpx;
  border-radius: 20rpx;
  background: #fff;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  z-index: 9
}
.prop-box-sub image{
  width: 100%;
  height: 232rpx;
}
.prop-box-sub .text{
  height: 134rpx;
  line-height: 134rpx;
  color: #333333;
  font-size: 32rpx;
}
.prop-box-sub .btn-kaiton{
  width: 372rpx;
  height: 70rpx;
background:linear-gradient(90deg,rgba(56,164,239,1) 0%,rgba(0,102,173,1) 100%);
border-radius:32rpx;
line-height: 70rpx;
margin: 0 auto 30rpx;
color: #fff;
}
.prop-box-sub .btn-shop{
  width: 372rpx;
  height: 70rpx;
border:1px solid rgba(2,104,175,1);
border-radius:32rpx;
line-height: 70rpx;
margin: auto ;
color: #0268AF;
}
.prop-box-sub .prop-cuo{
width: 70rpx;
height: 70rpx;
position: absolute;
bottom: -100rpx;
left: 0;
right: 0;
margin: auto;
}