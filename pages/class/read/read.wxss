/* 翻页 */
.foot-nav {
  width: 85%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 56rpx;
  position: fixed;
  bottom: 26rpx;
  background: #fff;
}
.nav-ok {
  width: 224rpx;
  height: 68rpx;
  background: rgba(0, 102, 173, 1);
  box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.18);
  border-radius: 34rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 68rpx;
  text-align: center;
}

.nav-next {
  width: 152rpx;
  height: 56rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.18);
  border-radius: 28rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 56rpx;
  text-align: center;
}

/* 新增内容 */
.popup-box{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999999;
  background: #fff;

  padding: 0 38rpx;
  box-sizing: border-box;
  display: none;
}
.block{
  display: block !important;
}
.pop-con{
  width: 100%;
  height: 92vh;
  overflow: auto;

}
.pop-btn-box{
  width: 100%;
  height: 7vh;

  display: flex;
  align-items: center;
  justify-content: center;
}
.pop-btn{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #fff;
  height: 80%;
  width: 50%;
  border-radius:30px;
  background:linear-gradient(90deg,rgba(56,164,239,1) 0%,rgba(0,102,173,1) 100%);
}

.pop-c-sub{
  display: flex;
  flex-wrap: wrap;
}

.pop-c-sub-i{
  margin-bottom:30rpx ;
  width: calc((100% - 224rpx)/6);
  border-radius: 50%;
  border:1px solid rgba(153,153,153,1);
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.pop-c-sub-i::before{content: "";padding-top: 100%;}

.pop-c-sub-i:not(:nth-child(6n)){
  margin-right:44rpx ;

}
