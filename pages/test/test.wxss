}
/* 新增客服 */
.contact-box{
  position: relative;
}
.contact{
position: absolute;
top: 0;
left: 0;
width: 100%;
height: 100%;
background-color: transparent;

}
button::after {
  border: none;
}
/* 考试倒计时 */
.hint-box{
  width: 100%;
  height:   60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  display: flex;
  border-bottom: 1rpx solid #358DEC;
}
.hint-l{
  width: 28%;
background: #358DEC;
color: #EBF3FC;
text-align: center;
}
.hint-r{
  width: 72%;
  background: #fff;
  color: #333333;
  padding-left: 32rpx;
  box-sizing: border-box;
  text-align: left;
}
