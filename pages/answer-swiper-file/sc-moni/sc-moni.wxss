       /************以下为具体实现************/
        .wave .circle {
            position: absolute;
            border-radius: 50%;
            opacity: 0;
        }

        /* 波纹效果 */
        .wave.ripple .circle {
      
            width:300rpx;
            /* 减去边框的大小 */
            height: 300rpx;
            /* 减去边框的大小 */
            border: 3px solid #fff;
        }

        .wave.ripple .circle:first-child {
            animation: circle-opacity 3s infinite;
        }

        .wave.ripple .circle:nth-child(2) {
            animation: circle-opacity 3s infinite;
            animation-delay: .3s;
        }

        .wave.ripple .circle:nth-child(3) {
            animation: circle-opacity 3s infinite;
            animation-delay: .6s;
        }


        .wave.ripple.danger .circle {
            border-color: #2E9BE8;
        }

 
        .wave.ripple.warning .circle {
            border-color: #2E9BE8;
        }

        @keyframes circle-opacity {
            from {
                opacity: 1;
                transform: scale(0);
            }

            to {
                opacity: 0;
                transform: scale(1);
            }
        }

