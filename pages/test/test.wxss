}
.t-item-i-img{
  width: 48rpx;
 height: 54rpx;
}
.t-item-bottom{
  width: 100%;
  height: 5px;
  background-color:#F2F2F2 ;
}
.t21{
  width: 64rpx !important;
  height: 54rpx !important;
}
.t22{
  width: 56rpx !important;
