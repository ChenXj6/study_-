page {
    background: #F2F2F2;
}

.nav {
    width: 100%;
    background: white;
}

.nav-top,
.nav-item {
    display: flex;
    align-items: center;
    justify-content: space-around;
    padding: 16rpx 24rpx 16rpx 26rpx;
}

.nav-top {
    color: rgba(49, 49, 49, 1);
    margin: 10rpx 0 0;
    border-bottom: 4rpx solid #F2F2F2;
}

.nav-item {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(102, 102, 102, 1);
    line-height: 40rpx;
    border-bottom: 1px solid #F2F2F2;
}

.one-box {
    width: 40%;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.two-box {
    width: 40%;
    text-align: center;
}

.three-box {
    width: 20%;
    text-align: center;
}