/* pages/course/course.wxss */

page{
  background-color: #F2F2F2;

}
.container{
  padding: 0   28rpx 0 28rpx;
  font-size: 36rpx;


}
.title-box{
  display: flex;
  width: 100%;
  justify-content: space-around;
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
  padding-top:20rpx; 
  text-align: center;
}
.title-box .title{
  width: 204rpx;
  box-shadow:0px 1px 2px 0px rgba(0,0,0,0.1);
  color: #fff;
  height: 60rpx;
  line-height: 60rpx;
  background:rgba(0,90,161,1);
border-radius:8rpx;
}
.title-box .title2{
    width: 204rpx;
   background:rgba(255,255,255,1);
    color: #333333;
line-height: 60rpx;
border-radius:4px;
border:1px solid rgba(240,240,240,1);
}
.sub-content-box{

  padding: 0 16rpx;

}
.sub-content-item{
  background-color: #fff;
  display: flex;
align-items: center;

  padding: 0 30rpx;
  box-sizing: border-box;
  min-height: 200rpx;
  margin-top: 20rpx;
  box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.1);
  border-radius: 4px;

}
.sub-item-right{
  width: 18rpx;
  height: 30rpx;

}
/* 
** 弹出层开始
 */
.prop-box{
  text-align: center;
  position: fixed;
  width: 100%;
  height: 100vh;
  top: 0;
  left: 0;
  background:rgba(0,0,0,0.5);
}
.prop-box-sub{
  width: 484rpx;
  height: 584rpx;
  border-radius: 20rpx;
  background: #fff;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  z-index: 9
}
.prop-box-sub image{
  width: 100%;
  height: 232rpx;
}
.prop-box-sub .text{
  height: 134rpx;
  line-height: 134rpx;
  color: #333333;
  font-size: 32rpx;
}
.prop-box-sub .btn-kaiton{
  width: 372rpx;
  height: 70rpx;
background:linear-gradient(90deg,rgba(56,164,239,1) 0%,rgba(0,102,173,1) 100%);
border-radius:32rpx;
line-height: 70rpx;
margin: 0 auto 30rpx;
color: #fff;
}
.prop-box-sub .btn-shop{
  width: 372rpx;
  height: 70rpx;
border:1px solid rgba(2,104,175,1);
border-radius:32rpx;
line-height: 70rpx;
margin: auto ;
color: #0268AF;
}
.prop-box-sub .prop-cuo{
width: 70rpx;
height: 70rpx;
position: absolute;
bottom: -100rpx;
left: 0;
right: 0;
margin: auto;
}

/* 
** 弹出层结束
 */
