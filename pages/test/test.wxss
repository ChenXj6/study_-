}


/* 新增内容 */
.t-item-box{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  height: 380rpx;
  border-color: #FFFFFF;

}
.t-item-box:last-child{
border: 1px solid #F2F2F2;

}
.t-item-abs{
position: absolute;
background-color: #F2F2F2;
margin:auto;

}
.t-item-abs3{
  width: 200rpx;
  height: 200rpx;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  border-radius: 50%;
  z-index: 10;
}
.t-item-abs1{
  width: 100%;
  height: 1px;
  top: 0;
  bottom: 0;
  left: 0;


}
.t-item-abs2{
  width: 1px;
  height: 100%;
  top: 0;

  left: 0;
  right: 0;
}
.t-item-i{
  width: 50%;
  height: 50%;
    display: flex;
  flex-direction: column;
justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
